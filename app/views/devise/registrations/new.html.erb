<%= render "shared/header" %>

  <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>

<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      新規登録
    </h1>
  </div>

  <%= render 'shared/error_messages',collection: @user, model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :nickname, placeholder:"例) もも太郎", maxlength:"20" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :name, placeholder:"例) 山田太郎", maxlength:"20" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password,  placeholder:"6文字以上の半角英数字" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation,placeholder:"同じパスワードを入力"  %>
  </div>

  <div class="actions">
    <%= f.submit "会員登録",class:"login-red-btn" %>
  </div>
</div>
<% end %>

